						{
							"listen": "test",
							"script": {
								"id": "e043b41a-8371-493e-acde-9abc9130ff29",
								"exec": [
									"var jsonData = pm.response.json();",
									"",
									"pm.test(\"Status code é igual a 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Results não é nulo\", function () {",
									"    pm.expect(jsonData.results).not.eql(null);",
									"});",
									"",
									"",
									"",
									"tests[\"Título do filme 1 é: \" + jsonData.results[0].title] = jsonData.results[0].title === \"A New Hope\";",
									"",
									"tests[\"Título do filme 2 é: \" + jsonData.results[1].title] = jsonData.results[1].title === \"Attack of the Clones\";",
									"",
									"tests[\"Título do filme 3 é: \" + jsonData.results[2].title] = jsonData.results[2].title === \"The Phantom Menace\";",
									"",
									"tests[\"Título do filme 4 é: \" + jsonData.results[3].title] = jsonData.results[3].title === \"Revenge of the Sith\";",
									"",
									"tests[\"Título do filme 5 é: \" + jsonData.results[4].title] = jsonData.results[4].title === \"Return of the Jedi\";",
									"",
									"tests[\"Título do filme 6 é: \" + jsonData.results[5].title] = jsonData.results[5].title === \"The Empire Strikes Back\";",
									"",
									"tests[\"Título do filme 7 é: \" + jsonData.results[6].title] = jsonData.results[6].title === \"The Force Awakens\";",
									"",
									"",
									"",
									"",
									"",
									"pm.environment.set(\"tituloFilme1\", jsonData.results[0].title);",
									"pm.environment.set(\"tituloFilme2\", jsonData.results[1].title);",
									"pm.environment.set(\"tituloFilme3\", jsonData.results[2].title);",
									"pm.environment.set(\"tituloFilme4\", jsonData.results[3].title);",
									"pm.environment.set(\"tituloFilme5\", jsonData.results[4].title);",
									"pm.environment.set(\"tituloFilme6\", jsonData.results[5].title);",
									"pm.environment.set(\"tituloFilme7\", jsonData.results[6].title);",
